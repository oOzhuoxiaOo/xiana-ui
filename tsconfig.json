{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@docs/*": ["./docs/*"]
    }
  },
  "include": ["env.d.ts", 
  "src/**/*", "src/**/*.vue", "src/**/*.json", 
  "docs/**/*.ts", "docs/**/*.vue", "docs/**/*.md"],
   "vueCompilerOptions": {
    "vitePressExtensions": [".md"],
  },
  "exclude": ["src/**/__tests__/*"]
}